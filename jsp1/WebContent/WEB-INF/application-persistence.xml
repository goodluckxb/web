	<bean id="juyuanDataSource" class="com.zaxxer.hikari.HikariDataSource"
		destroy-method="close">
		<constructor-arg ref="jyHikariConfig" />
	</bean>

	<bean id="jyHikariConfig" class="com.zaxxer.hikari.HikariConfig">
		<property name="poolName" value="springJyHikariCP" />
		<property name="driverClassName"
			value="${db.mysql.dataSource.juyuan.driverClassName}" />
		<property name="jdbcUrl" value="${db.mysql.dataSource.juyuan.url}" />
		<property name="username" value="${db.mysql.dataSource.juyuan.username}" />
		<property name="password" value="${db.mysql.dataSource.juyuan.password}" />
		<property name="minimumIdle" value="${db.mysql.minIdle}" />
		<property name="maximumPoolSize" value="${db.mysql.maxPoolSize}" />
		<property name="dataSourceProperties">
			<props>
				<prop key="cachePrepStmts">true</prop>
				<prop key="prepStmtCacheSize">250</prop>
				<prop key="prepStmtCacheSqlLimit">2048</prop>
				<prop key="useServerPrepStmts">true</prop>
				<prop key="characterEncoding">utf8</prop>
				<prop key="useUnicode">true</prop>
			</props>
		</property>
	</bean>


	<bean id="juyuanSqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="juyuanDataSource" />
		<!-- 显式指定Mapper文件位置 -->
        <property name="mapperLocations" >
            <list>
                <value>classpath:/META-INF/juyuan/*Mapper.xml</value>
                <value>classpath:/META-INF/inv_juyuan/*Mapper.xml </value> 
            </list>
        </property>
	</bean>

	<bean id="jyTransactionManager"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="juyuanDataSource" />
	</bean>


	<bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
		<property name="basePackage" value="com.taijs.adapter.persistence.juyuan.batch;cn.datek.fund.investment.advisor.jy.dao" />
		<property name="sqlSessionFactoryBeanName" value="juyuanSqlSessionFactory" />
	</bean>

