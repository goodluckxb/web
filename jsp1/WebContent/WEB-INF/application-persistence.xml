		name="acquireRetryAttempts" value="30" /> <property name="checkoutTimeout" 
		value="5000" /> <property name="preferredTestQuery" value="select 1" /> </bean> -->

	<bean id="newDataSource" class="com.zaxxer.hikari.HikariDataSource"
		destroy-method="close">
		<constructor-arg ref="hikariConfig" />
	</bean>

	<bean id="hikariConfig" class="com.zaxxer.hikari.HikariConfig">
		<property name="poolName" value="springHikariCP" />
		<property name="driverClassName" value="${db.mysql.dataSource.driverClassName}" />
		<property name="jdbcUrl" value="${db.mysql.dataSource.url}" />
		<property name="username" value="${db.mysql.dataSource.username}" />
		<property name="password" value="${db.mysql.dataSource.password}" />
		<property name="minimumIdle" value="${db.mysql.minIdle}" />
		<property name="maximumPoolSize" value="${db.mysql.maxPoolSize}" />
		<property name="connectionInitSql" value="set names utf8"/>
		<property name="dataSourceProperties">
			<props>
				<prop key="cachePrepStmts">true</prop>
				<prop key="prepStmtCacheSize">250</prop>
				<prop key="prepStmtCacheSqlLimit">2048</prop>
				<prop key="useServerPrepStmts">true</prop>
				<prop key="characterEncoding">utf8</prop>
				<prop key="useUnicode">true</prop>
			</props>
		</property>
	</bean>

	<!-- MyBatis配置 -->
	<bean id="newSqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="newDataSource" />
		<!-- 自动扫描entity目录, 省掉Configuration.xml里的手工配置 -->
		<property name="typeAliasesPackage" value="com.taijs.domain" />
		<!-- 显式指定Mapper文件位置 -->
		
		<property name="mapperLocations" >
		<list>
			<value>classpath:/META-INF/mybatis/*Mapper.xml </value>
		    <value>classpath:/META-INF/mybatis/datafile/*Mapper.xml </value> 
			<value>classpath:/META-INF/mybatisV101/*Mapper.xml</value>
			<value>classpath:/META-INF/mybatis2016/*Mapper.xml</value>
            <value>classpath:/META-INF/inv_adv/*Mapper.xml </value>
		</list>
		
		</property>
	</bean>

	<!-- 事务管理器配置, 使用jdbc事务 -->
	<bean id="transactionManager"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="newDataSource" />
	</bean>


	<bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
		<property name="basePackage" value="com.taijs.adapter.*.mybatis*;cn.datek.fund.investment.advisor.dao" />
		<property name="sqlSessionFactoryBeanName" value="newSqlSessionFactory" />
	</bean>

